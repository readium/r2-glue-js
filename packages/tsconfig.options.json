{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "strict": true
  }
}
